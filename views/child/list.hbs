<main class="main--wrapper">
    <section class="main--sectionOne">
        <div class="main--sectionOne--div">
            <h2 class="main--subtitle">List of children</h2>
        </div>
        <div class="sectionOne--wrapper">
            <ul class="sectionOne__list">
                {{#each childList}}
                    <li class="sectionOne__li">
                        <form action="/child/gift/{{this.id}}?_method=PATCH" method="post" class="sectionOne__form">
                            <label class="sectionOne__label">
                                {{this.name}}
                                <select name="giftId">
                                    <option value="">Brak</option>
                                    {{#each ../giftList}}
                                        <option value="{{this.id}}" {{#if (equals this.id ../giftId)}}selected="selected" {{/if}} >{{this.name}}</option>
                                    {{/each}}
                                </select>
                            </label>
                            <button class="mainBtn">Save</button>
                        </form>
                    </li>
                {{/each}}
            </ul>
        </div>

    </section>

    <section class="main--sectionTwo">
        <h2 class="main--subtitle">Add new child to list</h2>
        <form action="/child" method="post" class="sectionOne__form" >
            <label>
                ImiÄ™
                <input name="name" type="text">
            </label>
            <button class="mainBtn">Add</button>
        </form>
    </section>

</main>